#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <4>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  BSPC |
// |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   \   |
// |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
// | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "_"  |  |  "="  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
//                     | ALT  | ENT  | LOWER|  SPACE |  | ENTER | RAISE|  DEL  | DEL   |
            bindings = <
&kp ESC   &kp N1 &kp N2 &kp N3   &kp N4   &kp N5                      &kp N6 &kp N7    &kp N8    &kp N9  &kp N0   &kp BSPC
&kp TAB   &kp Q  &kp W  &kp E    &kp R    &kp T                       &kp Y  &kp U     &kp I     &kp O   &kp P    &kp BSLH
&kp LCTRL &kp A  &kp S  &kp D    &kp F    &kp G                       &kp H  &kp J     &kp K     &kp L   &kp SEMI &kp SQT
&kp LSHFT &kp Z  &kp X  &kp C    &kp V    &kp B  &kp MINUS  &kp EQUAL &kp N  &kp M     &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                        &kp LALT &kp RET  &mo 1  &kp SPACE  &kp RET   &mo 2  &kp RGUI  &kp DEL
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
// ------------------------------------------------------------------------------------------------------------
// |   Â·   |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// |       |     |  ^  |  E   |  -   |  +   |                   |      |       |       |      |       |  F12  |
// |       |  <  |  v  |  >   |  [   |  ]   |                   |      |       |       |      |       |       |
// |       |     |     |  C   |  V   |      |  PGUP  |  | PGDN  |      |       |  [    |  ]   |       |       |
//                     |      |      |      |        |  |       |      |       |       |
            bindings = <
&kp GRAVE  &kp F1           &kp F2            &kp F3            &kp F4       &kp F5                          &kp F6    &kp F7    &kp F8    &kp F9    &kp F10   &kp F11
&trans     &trans           &kp UP            &kp E             &kp MINUS    &kp PLUS                        &trans    &trans    &trans    &trans    &trans    &kp F12
&trans     &kp LEFT         &kp DOWN          &kp RIGHT         &kp LBKT     &kp RBKT                        &trans    &trans    &trans    &trans    &trans    &trans
&trans     &trans           &trans            &kp C             &kp V        &trans    &kp PG_UP  &kp PG_DN  &trans    &trans    &kp LBKT  &kp RBKT  &trans    &trans
                                              &trans            &trans       &trans    &trans     &trans     &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |       |     |     |      |      |      |                   |      |       |       |      |       |       |
// |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
// |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
// |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
//                     |      |      |      |        |  |       |      |       |       |
            bindings = <
&bt BT_CLR  &bt BT_SEL 1   &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4  &bt BT_SEL 5                   &trans      &trans    &trans    &trans   &bt BT_SEL 0    &studio_unlock
&kp GRAVE   &kp N1         &kp N2          &kp N3          &kp N4        &kp N5                         &kp N6      &kp N7    &kp N8    &kp N9   &kp N0          &trans
&kp F1      &kp F2         &kp F3          &kp F4          &kp F5        &kp F6                         &trans      &kp LEFT  &kp DOWN  &kp UP   &kp RIGHT       &trans
&kp F7      &kp F8         &kp F9          &kp F10         &kp F11       &kp F12   &trans   &trans      &kp KP_PLUS &kp MINUS &kp EQUAL &kp LBKT &kp RBKT        &trans
                                           &trans          &trans        &trans    &trans   &trans      &trans      &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        number_layer {
// ------------------------------------------------------------------------------------------------------------
// |       |     |     |      |      |      |                   |      |       |       |      |       |       |
// |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
// |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
// |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
//                     |      |      |      |        |  |       |      |       |       |
            bindings = <
&bt BT_CLR  &bt BT_SEL 1   &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4  &bt BT_SEL 5                   &trans      &trans    &trans    &trans   &bt BT_SEL 0    &studio_unlock
&kp GRAVE   &kp N1         &kp N2          &kp N3          &kp N4        &kp N5                         &kp N6      &kp N7    &kp N8    &kp N9   &kp N0          &trans
&kp F1      &kp F2         &kp F3          &kp F4          &kp F5        &kp F6                         &trans      &kp LEFT  &kp DOWN  &kp UP   &kp RIGHT       &trans
&kp F7      &kp F8         &kp F9          &kp F10         &kp F11       &kp F12   &trans   &trans      &kp KP_PLUS &kp MINUS &kp EQUAL &kp LBKT &kp RBKT        &trans
                                           &trans          &trans        &trans    &trans   &trans      &trans      &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
